
<div class="game-container" tabindex="0" @onclick="_gameManager.StartGame">

    <h1>Start Fight</h1>
    <div class="match">
        @foreach (var round in _gameManager.RoundDescriptions)
        {
            <p>@round</p>
        }
    </div>


</div>

@code {
    GameManager _gameManager;



    protected override void OnInitialized()
    {
        _gameManager = new GameManager();
        _gameManager.MainLoopCompleted += (o, e) => StateHasChanged();
    }

    void StartRound(KeyboardEventArgs e)
    {
        if (e.Key == " ")
            _gameManager.StartGame();
    }
}
